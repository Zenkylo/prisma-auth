extends ../index.pug

block append body
  .container.flex-fill.pt-5
    .row.justify-content-center.align-content-center
      .col-xs-12.col-md-6
        form.card.shadow-lg.rounded-3.border-0(method='POST' action='/web/auth/password-reset')
          .card-body
            h5.card-title.mb-3 Password Reset
            .mb-3
              label.form-label(for='emailInputField') Email address
              input#emailInputField.form-control(type='email' name='email' autofocus)
            button.btn.btn-primary(type='submit') Submit