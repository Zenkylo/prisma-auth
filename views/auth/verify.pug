extends ../index.pug

block append body
  .container.flex-fill.pt-5
    .row.justify-content-center.align-content-center
      .col-xs-12.col-md-6
        if error
          .card.rounded-3.border-0
            .card-body
              h5.card-title.mb-3 Error Verifying Email
              .alert.alert-warning.shadow(role='alert')
                p.mb-0 We encountered a problem verifying your email. Please 
                  a(href='/auth/login') log into
                  |&nbsp;your account to issue a verification email.
        else
          .card.rounded-3.border-0
            .card-body
              h5.card-title.mb-3 Email Verified
              .alert.alert-success.shadow(role='alert')
                span.fs-4 üëç
                strong.ms-2.me-1 #{user.email}
                |has been verified. You can close this window.