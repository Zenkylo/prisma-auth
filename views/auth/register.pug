extends ../index.pug

block append body
  include ./includes/nav
  .container.flex-fill.pt-5
    .row.justify-content-center.align-content-center
      .col-xs-12.col-md-6
        form.card.shadow-lg.rounded-3.border-0(method='POST' action='/web/auth/register')
          .card-body
            h5.card-title.mb-3 Register
            .mb-3
              label.form-label(for='exampleInputEmail1') Email address
              input#exampleInputEmail1.form-control(type='email' aria-describedby='emailHelp' name='email')
              #emailHelp.form-text We&apos;ll never share your email with anyone else.
            .mb-3
              label.form-label(for='exampleInputPassword1') Password
              input#exampleInputPassword1.form-control(type='password' name='password')
            .mb-3
              label.form-label(for='exampleInputPassword1') Confirm Password
              input#exampleInputPassword1.form-control(type='password' name='password_confirm')
            button.btn.btn-primary(type='submit') Submit
