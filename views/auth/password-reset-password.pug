extends ../index.pug

block append body
  .container.flex-fill.pt-5
    .row.justify-content-center.align-content-center
      .col-xs-12.col-md-6
        form.card.rounded-3.border-0(action=`/web/auth/password-reset/capture?token=${token}` method='POST')
          .card-body
            h5.card-title.mb-3 Password Reset
            .mb-3
              label.form-label(for='emailInputField') Email address
              input#emailInputField.form-control(type='email' name='email' value=`${email}` readonly)
            .mb-3
              label.form-label(for='passwordInputField') Password
              input#passwordInputField.form-control(type='password' name='password' autofocus)
            .mb-3
              label.form-label(for='passwordConfirmInputField') Confirm Password
              input#passwordConfirmInputField.form-control(type='password' name='password_confirm')
            button.btn.btn-primary(type='submit') Submit

